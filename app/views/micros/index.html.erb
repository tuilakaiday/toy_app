<p id="notice"><%= notice %></p>

<h1>Micros</h1>

<table>
  <thead>
    <tr>
      <th>Content</th>
      <th>User</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @micros.each do |micro| %>
      <tr>
        <td><%= micro.content %></td>
        <td><%= micro.user_id %></td>
        <td><%= link_to 'Show', micro %></td>
        <td><%= link_to 'Edit', edit_micro_path(micro) %></td>
        <td><%= link_to 'Destroy', micro, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Micro', new_micro_path %>
